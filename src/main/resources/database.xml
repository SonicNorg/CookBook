<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet author="norg" id="database-1">
        <createTable tableName="recipe" remarks="Рецепт">
            <column name="recipe_id" type="NUMERIC(19,0)" autoIncrement="true" remarks="Уникальный идентификатор">
                <constraints primaryKey="true" nullable="false" primaryKeyName="pk_recipe"/>
            </column>
            <column name="name" type="VARCHAR(255)" remarks="Название рецепта">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createIndex indexName="k01_recipe" tableName="recipe" unique="true">
            <column name="name"/>
        </createIndex>
    </changeSet>
    <changeSet author="norg" id="database-2">
        <createTable tableName="ingredient" remarks="Ингредиент">
            <column name="ingredient_id" type="NUMERIC(19,0)" autoIncrement="true" remarks="Уникальный идентификатор">
                <constraints primaryKey="true" nullable="false" primaryKeyName="pk_ingredient"/>
            </column>
            <column name="name" type="VARCHAR(255)" remarks="Название ингредиента">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createIndex indexName="k01_ingredient" tableName="ingredient" unique="true">
            <column name="name"/>
        </createIndex>
    </changeSet>
    <changeSet author="norg" id="database-3">
        <createTable tableName="recipe_ingredient" remarks="Ингредиенты рецепта">
            <column name="recipe_ingredient_id" type="NUMERIC(19,0)" autoIncrement="true" remarks="Уникальный идентификатор">
                <constraints primaryKey="true" nullable="false" primaryKeyName="pk_recipe_ingredient"/>
            </column>
            <column name="recipe_id" type="NUMERIC(19,0)" remarks="Рецепт">
                <constraints nullable="false"/>
            </column>
            <column name="ingredient_id" type="NUMERIC(19,0)" remarks="Ингредиент">
                <constraints nullable="false"/>
            </column>
            <column name="quantity" type="NUMERIC(25,6)" remarks="Количество">
                <constraints nullable="true"/>
            </column>
            <column name="units" type="VARCHAR(255)" remarks="Ед. измерения">
                <constraints nullable="true"/>
            </column>
        </createTable>
        <createIndex indexName="k01_recipe_ingredient" tableName="recipe_ingredient" unique="false">
            <column name="recipe_id"/>
        </createIndex>
        <createIndex indexName="k02_recipe_ingredient" tableName="recipe_ingredient" unique="false">
            <column name="ingredient_id"/>
        </createIndex>
        <addForeignKeyConstraint baseColumnNames="recipe_id"
                                 baseTableName="recipe_ingredient"
                                 constraintName="fk_recipe_ingredient_recipe"
                                 referencedColumnNames="recipe_id"
                                 referencedTableName="recipe" />
        <addForeignKeyConstraint baseColumnNames="ingredient_id"
                                 baseTableName="recipe_ingredient"
                                 constraintName="fk_recipe_ingredient_ingredient"
                                 referencedColumnNames="ingredient_id"
                                 referencedTableName="ingredient" />


    </changeSet>

</databaseChangeLog>